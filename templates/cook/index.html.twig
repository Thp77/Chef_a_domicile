{% extends 'base.html.twig' %}
{% block title %}Nos cuisiniers{% endblock %}

{% block body %}
<div class="container-fluid cuisto">
<div class="row  flex-wrap justify-content-evenly">
	<h1 class="mt-5">Nos cuisiniers</h1>
	<h3 class="my-4">Voici nos diff√©rents chefs !</h3>

	{% for cook in cooks %}
	<div class="dd_cook col-12 col-sm-6 col-md-4 col-lg-3 ">
		<div class="card my-3 mx-2">
  			<img src="{% if cook.photo %}{{ cook.photo }}{% else %}/images/no-photo.png{% endif %}" class="card-img-top" alt="{{ cook.name }}">
 			 <div class="card-body text-center">
    				<h5 class="card-title">{{ cook.firstname }} {{ cook.name }}</h5>
    				<p class="card-text">{{ cook.description }}</p>
    				<a href="{{ path('cook_show_products', {id: cook.id }) }}" class="btn bouton">Les produits</a>
    				<a href="{{ path('menu_list') }}" class="btn  bouton ">Les Menus</a>
  			</div>
		</div>
	</div>
	{% endfor %}
</div>
</div>

{% endblock %}
