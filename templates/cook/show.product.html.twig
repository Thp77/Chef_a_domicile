{% extends 'base.html.twig' %}
{% block title %}Produits du chef{% endblock %}

{% block body %}
	{% if products %}
		<h1 class="text-center text-warning">Les produits que propose {{ products[0].chief.firstname }} {{ products[0].chief.name }}</h1>
		{% for product in products %}	
			<div class="card dd_prod mb-3 d-inline-flex align-items-center text-white my-5 mx-3" style="max-width: 500px;">
				<div class="row g-0 ">
					<div class="col-md-12 ">
						<img src="{{ product.photo }}" alt="{{ product.name }}" class="img-fluid " alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ product.name }}</h5>
							<p class="card-text">{{ product.description }}</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	{% else %}
		<h1 class="text-center text-warning">Ce chef ne propose pas encore de produit</h1>
	{% endif %}
{% endblock %}