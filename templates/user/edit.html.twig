{% extends 'base.html.twig' %}

{% block body %}
<div class="container dd_update">
{{ form_start(form) }}
    <div class="row">
    <h1 class="text-center my-4">Modifier le profil</h1>
        <div  class="col-md-6 my-1" >
            {{ form_row(form.username  , {'attr':{'class':'form-control'}}) }}
            {{ form_row(form.email  , {'attr':{'class':'form-control'}}) }}
            {{ form_row(form.plainPassword) }}
            
        </div>
        
        <div class="col-md-6 my-1" >
            {{form_row(form.name , {'attr':{'class':'form-control'}})}}
            {{ form_row(form.firstname  , {'attr':{'class':'form-control'}}) }}
            {{ form_row(form.phone  , {'attr':{'class':'form-control'}}) }} 
            {{ form_row(form.birthday  , {'attr':{'class':'form-control'}}) }} 
        </div> 
    </div>
    <div class="row mt-4 align-items-center">
        <div class="{% if user.photo %}col-12 col-md-6 mb-3{% else %}col-12{% endif %}">
            {{ form_row(form.file) }}
        </div>
            {% if user.photo %}
        <div class="col-12 col-md-6 text-center">
            <img src="{{ user.photo }}" alt="{{ user.name }}" class="img-fluid w-75">
        </div>
        {% endif %}
    </div>  
    <div class="{% if is_granted('ROLE_CHEF') %} row {% else %} d-none {% endif %}">
        <div class="col-12 my-1" >           
            {{ form_row(form.description) }} 
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12 my-4">
        {{ form_row(form.submit ) }}
        </div>
    </div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}

